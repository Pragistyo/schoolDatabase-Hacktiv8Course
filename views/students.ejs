  <body class="table-edit">
    <table class="table table-bordered">
      <tr>
        <th class="text-center">No</th>
        <th class="text-center">ID</th>
        <th class="text-center">First Name</th>
        <th class="text-center">Last Name</th>
        <th class="text-center">Full Name</th>
        <th class="text-center">Email</th>
        <th class="text-center">Add Subject</th>
        <th class="text-center">Options</th>
      </tr>
      <%let count = 0%>
      <%data.forEach(z=>{%>
        <tr>
          <%count++%>
          <td class="text-center"><%=count%></td>
          <td class="text-center"><%=z.id%></td>
          <td class="text-center"><%=z.first_name%></td>
          <td class="text-center"><%=z.last_name%></td>
          <td class="text-center"><%=z.getFullname()%></td>
          <td class="text-center"><%=z.email%></td>
          <td class="text-center">
            <a href="/students/<%=z.id%>/addsubject"><button type="button" name="button">add subject</button></a>
          </td>
          <td class="text-center">
            <a href="/students/edit/<%=z.id%>"><button type="button" name="button"><span class="glyphicon glyphicon-edit"></span>EDIT</button></a>
            <a href="/students/delete/<%=z.id%>" onclick="return confirm('delete this student?')"><button type="button" name="button"><span class="glyphicon glyphicon-edit"></span>DELETE</button></a>
          </td>
        </tr>
      <%})%>
    </table><br>
